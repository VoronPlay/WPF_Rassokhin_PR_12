<Page x:Class="WPF_Rassokhin_PR_12.PageStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Rassokhin_PR_12"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageStudent" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Source="Resources/User.png" Width="100">
        </Image>
        <Label Content="Меню Студента" Style="{StaticResource Label}" Grid.Row="0" Grid.ColumnSpan="2" Margin="105,5,205,5"/>
        <Label Content="Имя студента                   Имя" Style="{StaticResource Label}" Grid.Row="1"/>
        <Label Content="Логин студента                   Логин" Style="{StaticResource Label}" Grid.Row="2"/>
    </Grid>
</Page>
